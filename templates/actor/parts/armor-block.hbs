
 {{#if armor}}

     {{#unless armor.hide}}
        <div class="flex flex-col panel summary-block resource collapsible-container">
            <div class="flex-row">
                <div class="huge labeled-input">
                    <input class="input" type="text" value="{{armor.name}} ({{armor.subtype}})"
                           placeholder="" disabled/>
                    <div class="toggle control" data-toggle-id="{{concat "armor-" id}}">
                        <a>
                            <i class="fas {{#if
                                    (lookup toggles (concat "armor-" id))}}fa-minus{{else}}fa-plus{{/if}}"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="collapsible" style="display: {{#if
                    (lookup toggles (concat "armor-" id))}}grid{{else}}none{{/if}}">

                <div class="flex-row">
                    <div class="labeled-input" title="{{{armor.refDefense}}}"><label for="notes">Reflex Defense</label>
                        <div class="plain input">{{{armor.refDefense}}}</div>
                    </div>
                    <div class="labeled-input" title="{{{armor.fortDefense}}}"><label for="notes">Fortitude Defense</label>
                        <div class="plain input">{{{armor.fortDefense}}}</div>
                    </div>
                    <div class="labeled-input" title="{{{armor.maxDex}}}"><label for="notes">Max Dexterity</label>
                        <div class="plain input">{{{armor.maxDex}}}</div>
                    </div>
                </div>

                <div class="attack-notes labeled-input" title="{{{armor.notesText}}}"><label for="notes">Notes</label>
                    <div class="plain input">{{{armor.notesHTML}}}</div>
                </div>

                <div class="flex flex-col">

                </div>

                <div class="flex flex-row flex-wrap">
                        {{#if armor.hasAmmunition}}
                            {{> 'systems/swse/templates/item/parts/ammunition.hbs' ammunition=armor.ammunition}}
                        {{/if}}
                    {{#each armor.modes as |mode id|}}
                        <div class="mode-selector mode-group editor" data-type="{{mode.type}}"
                             data-mode-path="{{mode.modePath}}"
                             data-mode="{{mode.name}}" data-item-id="{{../../armor.id}}"
                             data-group="{{mode.group}}" data-attributes="{{stringify mode.attributes}}">
                            <label for="{{mode.name}} {{../../armor.id}}">{{mode.name}}</label>
                            <input type="checkbox" {{#unless mode.disabled}}checked{{/unless}} data-type="disable"
                                   data-action="effect-control" data-effect-uuid="{{mode.uuid}}"/>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    {{/unless}}
{{/if}}