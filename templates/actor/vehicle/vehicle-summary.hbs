<div class="summary-header swse">
    <div class="name large labeled-input">
        <label for="name" class="text">Vehicle Name</label>
        <input class="input" name="name" id="name" type="text" value="{{actor.name}}" placeholder=""/>
    </div>

    <div class="type large labeled-input">
        <label for="type" class="text">Vehicle Type</label>
        <input class="input" id="type" type="text" name="system.subType"  value="{{actor.system.subType}}" placeholder=""/>
    </div>

    <div class="captain medium labeled-input">
        <label for="captain" class="text">Captain</label>
        <input class="input" name="system.captain" id="captain" type="text" value="{{actor.system.captain}}"
               placeholder=""/>
    </div>

    <div class="crew medium labeled-input">
        <label for="crew" class="text">Crew</label>
        <input class="input" id="crew" type="text" name="system.vehicle.crew" value="{{actor.system.vehicle.crew}}" placeholder=""/>
    </div>

    <div class="passengers medium labeled-input">
        <label for="passengers" class="text">Passengers</label>
        <input class="input" id="passengers" type="text" name="system.vehicle.passengers" value="{{actor.system.vehicle.passengers}}" placeholder=""/>
    </div>

    <div class="size medium flex-row">
        <div class="labeled-input">
            <label for="size" class="text">Size</label>
            <input class="left-input" id="size" type="text" value="{{actor.size.name}}" placeholder="" disabled/>
        </div>
        <div class="divider"></div>
        <div class="labeled-input" style="width:40%">
            <label for="sizeMod" class="text">Mod</label>
            <input class="right-input" id="sizeMod" type="text" value="{{actor.size.sizeMod}}" placeholder="" disabled/>
        </div>
    </div>
    <div class="cargo medium flex-row">
        <div class="labeled-input">
            <label for="cargo" class="text">Cargo</label>
            <input class="left-input" id="cargo" type="text" name="system.vehicle.cargoCapacity.value"
                   value="{{ actor.system.vehicle.cargoCapacity.value}}" placeholder=""/>
        </div>
        <div class="divider"></div>
        <div class="labeled-input">
            <label for="cargoCapacity" class="text">Capacity</label>
            <input class="right-input" id="cargoCapacity" type="text" name="system.vehicle.cargoCapacity.capacity"
                   value="{{actor.system.vehicle.cargoCapacity.capacity}}" placeholder=""/>
        </div>
    </div>

    <div class="consumables medium labeled-input">
        <label for="consumables" class="text">Consumables</label>
        <input class="input" id="consumables" type="text"  name="system.vehicle.cargoCapacity.consumables" value="{{actor.system.vehicle.consumables}}" placeholder=""/>
    </div>

    <div class="cost medium labeled-input">
        <label for="cost" class="text">Cost</label>
        <input class="input" id="cost" type="text" name="system.vehicle.cost" value="{{actor.system.vehicle.cost}}" placeholder=""/>
    </div>


    <div class="size large flex-row">
        <div class="labeled-input">
            <label for="hyperdrive" class="text">Hyperdrive</label>
            <input class="left-input" id="hyperdrive" type="text" value="{{actor.hyperdrive.primary}}"
                   placeholder="" disabled/>
        </div>
        <div class="divider"></div>
        <div class="labeled-input">
            <label for="backupHyperdrive" class="text">Backup Hyperdrive</label>
            <input class="right-input" id="backupHyperdrive" type="text" value="{{actor.hyperdrive.backup}}"
                   placeholder="" disabled/>
        </div>
    </div>


    <div class="small labeled-input">
        <label for="challenge" class="text">CL</label>
        <input class="input" id="challenge" name="system.cl" type="text" value="{{actor.system.cl}}" placeholder=""/>
    </div>


    <div class="maxVelocity medium">
        <div class="labeled-input">
            <label for="maxVelocity" class="text">Maximum Velocity</label>
            <input class="input" id="maxVelocity" type="text" name="system.vehicle.maximumVelocity" value="{{actor.system.vehicle.maximumVelocity}}" placeholder=""/>
            <div class="control-0">km/h</div>
        </div>
    </div>




    <div class="large flex-col">
        <div class="top-label center label">Fighting Space</div>
        <div class="size flex-row">
            <div class="labeled-input">
                <label for="characterScale" class="text">Character Scale</label>
                <input class="left-input" id="characterScale" type="text"
                       value="{{actor.system.vehicle.fightingSpace.characterScale}}"
                       name="system.vehicle.fightingSpace.characterScale" placeholder="" />
            </div>
            <div class="divider"></div>
            <div class="labeled-input">
                <label for="starshipScale" class="text">Starship Scale</label>
                <input class="right-input" id="starshipScale" type="text"
                       value="{{actor.system.vehicle.fightingSpace.starshipScale}}"
                       name="system.vehicle.fightingSpace.starshipScale" placeholder="" />
            </div>
        </div>
    </div>



    <div class="large flex-col">
        <div class="top-label center label">Vehicle Speed</div>
        <div class="flex-row">
            <div class="labeled-input">
                <label for="speedVehicle" class="text">Starship Scale</label>
                <input class="left-input" id="speedVehicle" type="text" name="system.vehicle.speed.starshipScale" value="{{actor.system.vehicle.speed.starshipScale}}"
                       placeholder=""/>
            </div>
            <div class="labeled-input">
                <label for="speedCharacter" class="text">Character Scale</label>
                <input class="right-input" id="speedCharacter" type="text" name="system.vehicle.speed.characterScale" value="{{actor.system.vehicle.speed.characterScale}}"
                       placeholder=""/>
            </div>
        </div>
    </div>

</div>